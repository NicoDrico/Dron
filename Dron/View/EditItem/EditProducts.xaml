<Window x:Class="Dron.View.EditItem.EditProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dron.ViewModel.EditViewModel"
        mc:Ignorable="d"
        Title="Добавить продукт" Height="400" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="10,0,10,10">

            <Label Content="Продукт"></Label>
            <ComboBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}"/>

            <Label Content="Название"/>
            <TextBox Text="{Binding Name}" />

            <Label Content="Цена"/>
            <TextBox Text="{Binding Price}"/>

            <Label Content="Категория"/>
            <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"/>

        </StackPanel>

        <Button Grid.Row="1" Content="Добавить" Command="{Binding EditProduct}" />
    </Grid>
</Window>